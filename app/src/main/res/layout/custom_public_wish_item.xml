<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/publicWish_item_height"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEFBFF"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="-3dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bg_starwall"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="13dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_location" />

            <TextView
                android:id="@+id/publicWish_item_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:textColor="#CAE0E6" />

        </LinearLayout>

        <TextView
            android:id="@+id/publicWish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="11dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#696969"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="14dp"
            android:gravity="bottom"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/public_cheering"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:background="@drawable/cheering_selector"
                    android:button="@null" />

                <TextView
                    android:id="@+id/public_cheeringNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/public_cheering"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="7dp"
                    android:layout_marginLeft="2dp"
                    android:layout_toRightOf="@+id/public_cheering"
                    android:text="123,123"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#D2D2D2"
                    android:textSize="11sp" />

                <CheckBox
                    android:id="@+id/blessing_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="62dp"
                    android:layout_toRightOf="@id/public_cheering"
                    android:background="@drawable/blessing_selector"
                    android:button="@null" />

            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:layout_marginRight="14dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/distance"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="13dp"
                    android:layout_weight="1"
                    android:gravity="bottom|end"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#D2D2D2"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/elapsedTime"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:gravity="bottom|end"
                    android:text="Medium Text"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#D2D2D2"
                    android:textSize="11sp" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>