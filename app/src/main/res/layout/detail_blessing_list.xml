<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <TextView
        android:id="@+id/blessing_detailWish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="22dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#A0A0A0"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/blessing_cheeringLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="11dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/blessing_cheeringIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_good_pressed" />

        <TextView
            android:id="@+id/blessing_cheeringNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="123"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#D2D2D2"
            android:textSize="11sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/blessing_detailTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#D2D2D2"
                android:textSize="11sp" />
        </FrameLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEFBFF">


        <ListView
            android:id="@+id/detailBlessingList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/sendBlessing_LL"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:background="#EEFBFF"
            android:divider="@null"
            android:fastScrollEnabled="false"
            android:listSelector="#FFEEFBFF"
            android:textColor="#D2D2D2" />

        <LinearLayout
            android:id="@+id/sendBlessing_LL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="bottom"
            android:background="#FFFFFF"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/blessingET"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:maxHeight="133dp"
                android:maxLength="140" />

            <ImageButton
                android:id="@+id/sendBlessing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/send_blessing_selector" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
